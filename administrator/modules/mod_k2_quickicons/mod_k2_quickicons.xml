<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="administrator" method="upgrade" version="2.5" position="icon">
    <name>K2 Quick Icons (admin)</name>
    <author>JoomlaWorks</author>
    <creationDate>April 4th, 2022</creationDate>
    <copyright>Copyright (c) 2006 - 2022 JoomlaWorks Ltd. All rights reserved.</copyright>
    <authorEmail>please-use-the-contact-form@joomlaworks.net</authorEmail>
    <authorUrl>www.joomlaworks.net</authorUrl>
    <version>2.11.0</version>
    <description>K2_QUICKICONS_FOR_USE_IN_THE_JOOMLA_CONTROL_PANEL_DASHBOARD_PAGE</description>
    <files>
        <filename module="mod_k2_quickicons">mod_k2_quickicons.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="modCSSStyling" type="radio" default="1" label="K2_MODULE_DEFAULT_CSS" description="" class="btn-group btn-group-yesno">
                    <option value="1">K2_ENABLED</option>
                    <option value="0">K2_DISABLED</option>
                </field>
                <field name="modLogo" type="radio" default="1" label="K2_MODULE_LOGO" description="" class="btn-group btn-group-yesno" showon="layout:_:default">
                    <option value="1">K2_SHOW</option>
                    <option value="0">K2_HIDE</option>
                </field>
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        class="form-select"
                        validate="moduleLayout"
                />
                <field
                        name="show_items"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_ITEMS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_featured"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_FEATURED_ITEMS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_trashed"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_TRASHED_ITEMS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_categories"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_CATEGORIES"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_tags"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_TAGS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_comments"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_COMMENTS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_extra_fields"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_EXTRA_FIELDS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_extra_field_groups"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_EXTRA_FIELD_GROUPS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_media_manager"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_MEDIA_MANAGER"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_documentation"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_DOCS_AND_TUTORIALS"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_extension"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_EXTEND"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                        name="show_community"
                        type="radio"
                        label="MOD_K2_QUICKICON_SHOW_COMMUNITY"
                        layout="joomla.form.field.radio.switcher"
                        default="1"
                        showon="layout:_:joomla-native"
                >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="cache" type="list" default="0" label="K2_CACHING" description="K2_SELECT_WHETHER_TO_CACHE_THE_CONTENT_OF_THIS_MODULE">
                    <option value="0">K2_NO_CACHING</option>
                    <option value="1">K2_USE_GLOBAL</option>
                </field>
                <field name="cache_time" type="text" default="" label="K2_CACHE_TIME" description="K2_THE_TIME_IN_SECONDS_BEFORE_THE_MODULE_IS_RECACHED"/>
            </fieldset>
        </fields>
    </config>
</extension>
